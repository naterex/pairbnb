<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-7 col-md-offset-3 col-lg-6 col-lg-offset-3" id="listing">
  <center>
    <h2><%= t(".edit_listing") %></h2>
  </center>

  <%= form_for @listing do |form| %>

    <%= render partial: '/listings/form', object: form %>

    <%= button_tag type: "submit", class: "btn btn-success" do %>
      <i class="glyphicon glyphicon-ok"></i> Update listing
    <% end %>

    <div class="pull-right">
      <%= link_to '<i class="glyphicon glyphicon-remove"></i> Cancel'.html_safe, listing_path, class: "btn btn-danger" %>
    </div>

  <% end %>

  </div>
</div>
