  <div class="container">
    <center>
      <h2>Explore the world</h2>
      <p>Discover new, inspiring places close to home.</p>
      <div class="row">
        <div class="col-sm-4">
          <%= image_tag("london.png", class:"img-responsive") %>
        </div>
        <div class="col-sm-4">
          <%= image_tag("ubud.png", class:"img-responsive") %>
        </div>
        <div class="col-sm-4">
          <%= image_tag("rome.png", class:"img-responsive") %>
        </div>
      </div>
      <br>
      <div class="row hidden-xs">
        <div class="col-sm-4">
          <%= image_tag("tokyo.png", class:"img-responsive") %>
        </div>
        <div class="col-sm-4">
          <%= image_tag("sydney.png", class:"img-responsive") %>
        </div>
        <div class="col-sm-4">
          <%= image_tag("bangkok.png", class:"img-responsive") %>
        </div>
      </div>
    </center>
  </div>
</div>

