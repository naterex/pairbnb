<div class="row">
  <div class="col-sm-7 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4" id="listing">
  <center>
    <h2><%= @listing.title %></h2>
  </center>

  <%= form_for @listing do |form| %>
    <div class="form-group ">
      <%= image_tag @listing.photo_url(:thumb).to_s, class: "img-rounded" %>
    </div>

    <div class="form-group ">
      <%= form.label :about %>
      <br>
      <%= @listing.about%>
    </div>

    <div class="form-group ">
      <%= form.label :property_type %>
      <br>
      <%= @listing.property_type %>
    </div>

    <div class="form-group ">
      <%= form.label :room_type %>
      <br>
      <%= @listing.room_type %>
    </div>

    <div class="form-group ">
      <%= form.label :bedrooms %>
      <br>
      <%= @listing.bedrooms %>
    </div>

    <div class="form-group ">
      <%= form.label :bathrooms %>
      <br>
      <%= @listing.bathrooms %>
    </div>

    <div class="form-group ">
      <%= form.label :guests %>
      <br>
      <%= @listing.about %>
    </div>

    <div class="form-group ">
      <%= form.label :address %>
      <br>
      <%= @listing.address %>
    </div>

    <div class="form-group ">
      <%= form.label :city %>
      <br>
      <%= @listing.city %>
    </div>

    <div class="form-group ">
      <%= form.label :state %>
      <br>
      <%= @listing.state %>
    </div>

    <div class="form-group ">
      <%= form.label :zip %>
      <br>
      <%= @listing.zip %>
    </div>

    <div class="form-group ">
      <%= form.label :country %>
      <br>
      <%= @listing.country %>
    </div>

  <% end %>

  <%= link_to t(".edit_listing"), edit_listing_path, class: "btn btn-success" %>

  <div class="pull-right">
      <%= link_to t(".delete_listing"), listing_path, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
  </div>

  </div>
</div>
