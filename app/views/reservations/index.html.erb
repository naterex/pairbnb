<div class="row">
  <center>
    <h2>My Reservations</h2>
    <br>
    <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-3 col-lg-8 col-lg-offset-2">

      <% if @reservations.count == 0 %>
        <h4>No reservations found, <%= link_to "click here to make a reservation.", root_path %></h4>
      <% else %>
        <table class="display" id="reservations_table" cellspacing="10" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>From</th>
              <th>To</th>
              <th>Listing</th>
              <th>City, Country</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @reservations.each do |reservation| %>
            <tr>
              <td><%= reservation.id %></td>
              <td><%= reservation.start_date %></td>
              <td><%= reservation.end_date %></td>
              <td><%= link_to reservation.listing.title, listing_path(reservation.listing) %></td>
              <td><%= reservation.listing.city %>, <%= reservation.listing.country %></td>
              <td>
              <%= link_to '<i class="glyphicon glyphicon-search"></i>&nbsp;&nbsp;View'.html_safe, reservation_path(reservation), class: "btn btn-primary" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

      <% end %>
      <br>
      <br>

    </div><!-- col-sm -->
  </center>
</div><!-- row -->
